<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MyApp</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/style.css" />

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>
    <script src="/scripts/globalVar.js"></script>
    <script src="/scripts/dashboard.js"></script>
  </head>
  <body>
    <nav class="navbar bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand">My App</a>
        <form class="d-flex" role="search">
          <button id="logOutBtn" class="btn btn-primary" type="submit">
            LogOut
          </button>
        </form>
      </div>
    </nav>
    <h2 class="dashboradText" style="margin-bottom: 50px">
      Welcome <i><%= user.firstName %> <%= user.lastName %></i>. Here are your
      tasks to Do!
    </h2>

    <table class="table" style="width: 800px; margin: auto">
      <thead>
        <tr>
          <th scope="col" colspan="3">
            <input
              type="text"
              id="addNewTodo"
              class="form-control"
              style="width: 500px !important; display: inline"
            />
            <button class="btn btn-primary" id="addTodoBtn">Add</button>
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for(let t of todos) { %>
        <tr data-id="<%= t.todoId %>">
          <td style="width: 50px">
            <div class="checkbox-wrapper-39">
              <label>
                <input type="checkbox" onchange="todoCheck(this)" />
                <span class="checkbox"></span>
              </label>
            </div>
          </td>
          <th scope="row" colspan="2" style="vertical-align: middle">
            <p><%= t.todo %></p>
            <div class="editTodoDiv">
              <input
                type="text"
                class="form-control"
                value="<%= t.todo %>"
                style="width: 400px !important; display: inline"
              />
              <button class="btn btn-success" onclick="todoUpdate(this)">Update</button>
              <button class="btn btn-danger" onclick="todoUpdateCancel(this)">
                Cancel
              </button>
            </div>
          </th>
          <td>
            <a
              href="javascript:void(0)"
              style="margin-right: 20px; color: green"
              onclick="todoEdit(this)"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-pencil-square"
                viewBox="0 0 16 16"
              >
                <path
                  d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                />
                <path
                  fill-rule="evenodd"
                  d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"
                />
              </svg>
            </a>
            <a
              href="javascript:void(0)"
              style="color: red"
              onclick="todoDelete(this)"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-trash-fill"
                viewBox="0 0 16 16"
              >
                <path
                  d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"
                />
              </svg>
            </a>
          </td>
        </tr>
        <% } %> <% if(todos.length == 0) { %>
        <tr>
          <th colspan="4" style="vertical-align: middle; text-align: center">
            There are no tasks to do!
          </th>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
